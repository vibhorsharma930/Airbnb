<configuration>
    <appender name="ConsoleLogger" class="ch.qos.logback.core.ConsoleAppender">


        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>



    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>C:/logs/bnb.log</file>  <!-- Ensure this matches your file name -->

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO"> <!-- or info, or trace, depending on what you need -->
        <appender-ref ref="FILE"/>
    <appender-ref ref="ConsoleLogger"/>
    </root>

</configuration>